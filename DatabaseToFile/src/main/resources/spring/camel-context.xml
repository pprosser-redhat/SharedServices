<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <restConfiguration apiContextPath="/docs" bindingMode="auto"
            component="undertow" contextPath="/sharedservices" port="8082"/>
        <rest apiDocs="true" enableCORS="true" id="startDBFileCreation" path="/createfile">
            <get id="getStartFile" outType="String" uri="/start">
                <to uri="direct:createFile"/>
            </get>
        </rest>
        <route id="simple-route">
            <from id="create-file" uri="direct:createFile"/>
            <setBody id="route-setBody">
                <constant>{"response": "Hello World"}</constant>
            </setBody>
            <log id="route-log" message=">>>> ${body}"/>
        </route>
    </camelContext>
</beans>
